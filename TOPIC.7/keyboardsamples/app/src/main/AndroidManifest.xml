<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jrivas.keyboard_samples">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Keyboardsamples">
        <activity
            android:name=".OrderActivity"
            android:label="Order Activity"
            android:parentActivityName=".DroidDesserts"/>
        <activity
            android:name=".DroidDesserts"
            android:label="@string/title_activity_droid_desserts"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Keyboardsamples.NoActionBar" />
        <activity
            android:name=".AlertDialogs"
            android:label="Alert Dialogs"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".KeyboardInputType"
            android:label="Task 1, 2 and 3."
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ThirdExerciseLesson7"
            android:label="Exercises 7 and 8."
            android:parentActivityName=".SecondActivity" />
        <activity
            android:name=".SecondExerciseLesson7"
            android:label="Exercises 4, 5 and 6."
            android:parentActivityName=".SecondActivity" />
        <activity
            android:name=".FirstExerciseLesson7"
            android:label="Exercises 1, 2 and 3."
            android:parentActivityName=".SecondActivity" />
        <activity
            android:name=".SecondActivity"
            android:label="Lesson 7 Menu"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
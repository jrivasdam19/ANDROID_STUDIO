<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_1"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/team_1_name"
            style="@style/TeamText" />
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:id="@+id/minus_team_1"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:onClick="decreaseScore"
            style="@style/MinusButtons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counter_team_1"
            android:text="@string/team_1_score"
            android:layout_centerInParent="true"
            style="@style/ScoreText" />
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:id="@+id/plus_team_1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:onClick="increaseScore"
            style="@style/PlusButtons"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_2"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/team_2_name"
            style="@style/TeamText" />
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:id="@+id/minus_team_2"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:onClick="decreaseScore"
            style="@style/MinusButtons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counter_team_2"
            android:text="@string/team_2_score"
            android:layout_centerInParent="true"
            style="@style/ScoreText" />
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:id="@+id/plus_team_2"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:onClick="increaseScore"
            style="@style/PlusButtons"/>
    </RelativeLayout>

</LinearLayout>
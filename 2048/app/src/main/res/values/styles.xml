<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basic_text">
        <item name="android:textColor">#004d40</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cell_style">
        <item name="android:layout_height">@dimen/cell</item>
        <item name="android:layout_width">@dimen/cell</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="upper_cells">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_titles">
        <item name="android:textSize">30sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="recycler_item">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
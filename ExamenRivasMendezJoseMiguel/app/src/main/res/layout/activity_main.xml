<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/editText"
        android:name="com.jrivas.examenrivasmendezjosemiguel.ModifyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/textOutPut"
        android:name="com.jrivas.examenrivasmendezjosemiguel.TextOutPut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/modiffyColors"
        android:name="com.jrivas.examenrivasmendezjosemiguel.ModifyColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>